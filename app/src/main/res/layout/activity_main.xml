<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainLayout">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pngegg"
        android:layout_above="@+id/layout2"></ImageView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/layout2">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:text="Курсы валют"
            android:textSize="30dp"></TextView>

        <EditText
            android:id="@+id/initialCurrency"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/spinner"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_xml"
            android:hint="У меня есть"></EditText>

        <ImageView
            android:id="@+id/pointerRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@+id/initialCurrency"
            android:src="@drawable/pointer"></ImageView>

        <EditText
            android:id="@+id/converterCurrency"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/spinner"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/pointerRight"
            android:background="@drawable/border_xml"
            android:hint="Я хочу получить"></EditText>

        <Button
            android:id="@+id/buttonConvert"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/initialCurrency"
            android:onClick="onConvertClick"
            android:text="Конвертировать"></Button>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dropdown"></Spinner>

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/converterCurrency"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/pointerRight"
            android:spinnerMode="dropdown"></Spinner>
    </RelativeLayout>

</RelativeLayout>